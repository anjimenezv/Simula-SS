    AccordionItem:
        title: 'Simulación Sistema masa-resorte-amortiguación'
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDGridLayout:
                id: ejercicio_demostrativo_masa
                spacing: dp(30)
                size_hint_y: None
                height: self.minimum_height
                rows_minimum: {0: dp(30), 1: dp(50), 2: dp(250), 3: dp(5), 4: dp(120), 5: dp(70), 6: dp(100), 7: dp(150), 8: dp(5), 9: dp(5), 10: dp(5), 11: dp(5), 12: dp(120), 13: dp(5), 14: dp(120), 15: dp(30), 16: dp(250), 17: dp(5), 18: dp(5), 19: dp(5), 20: dp(5), 21: dp(5), 22: dp(3), 23: dp(0)}
                padding: dp(20), dp(20)
                cols: 1
                # 0
                MDLabel:
                    markup: True
                    halign: 'center'
                    text: '[b][color=506E84]Sistema masa resorte amortiguación[/color][/ref][/b]'
                    font_name:'Arial'
                    font_size: dp(18)
                # 1
                MDLabel:
                    text: 'El sistema masa resorte amortiguación, es un sistema típico utilizado para demostrar e ilustrar modelado y simulación. Es por eso que en esta sección encuentras una explicación mas detallada sobre este caso, también puedes realizar una simulación de la velocidad con respecto al tiempo implementando tus propios datos. '
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 2
                Image:
                    source: 'imagenes/sismasaresorte.png'
                    allow_stretch: True
                    keep_ratio: True
                # 3
                MDLabel:
                    text: 'El sistema masa-resorte-amortiguación, se describe mediante la siguiente ecuación:'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
               # 4
                Image:
                    source: 'imagenes/ecusismasaresorte.png'
                    allow_stretch: True
                    keep_ratio: True
                # 5
                MDLabel:
                    text: 'Donde (t) es el tiempo, F(t) es una fuerza externa aplicada al sistema, c es la constante de amortiguamiento, k es la rigidez del resorte y m es la masa.\n\n'+'x(t) Es la posición de la masa m.\n\n'+'x(t) Es la primera derivada de la posición.\n\n'+'x (t) Es la segunda derivada de la posición, la cual es igual a la aceleración de la masa m.'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 6
                MDLabel:
                    text: 'Las ecuaciones diferenciales de orden superior normalmente se pueden reformular en un sistema de ecuaciones diferenciales de primer orden, quedando de la siguiente manera:'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 7
                Image:
                    source: 'imagenes/recuacionmasaresorte.png'
                    allow_stretch: True
                    keep_ratio: True
                # 8
                MDLabel:
                    text: 'Se establece:'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 9
                MDLabel:
                    text: 'x = x1 --> x1 = posición.\n\n'+'x = x2 --> x2 = velocidad'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 10
                MDLabel:
                    text: 'Y con lo anterior conseguimos:'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 11
                MDLabel:
                    text: 'x1 = x2'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 12
                Image:
                    source: 'imagenes/ecusismasaresortex.png'
                    allow_stretch: True
                    keep_ratio: True
                # 13
                MDLabel:
                    text: 'Finalmente:'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 14
                Image:
                    source: 'imagenes/ecusismasaresortefinal.png'
                    allow_stretch: True
                    keep_ratio: True
                # 15
                MDLabel:
                    text: 'Al implementar este ejercicio en Python e incluir valores aleatorios del tiempo(t), resorte (k), fuerza externa aplicada F(t) y amortiguación (c), se obtiene la siguiente grafica:'
                    text_size: self.width, None
                    halign: "left"
                    font_name:'Arial'
                    font_size: dp(14)
                # 16
                Image:
                    source: 'imagenes/ecusismasaresortesimu.png'
                    allow_stretch: True
                    keep_ratio: True
                # 17
                MDLabel:
                    markup: True
                    halign: 'center'
                    text: '[b][color=506E84]Ejercicio interactivo[/color][/ref][/b]'
                    font_name:'Arial'
                    font_size: dp(18)
                # 18
                MDTextField:
                    id: var_c_1
                    hint_text: "Ingrese los valores de la amortiguación C: "
                    mode: "rectangle"
                    required: True
                    helper_text: "Este campo es requerido"
                    on_text_validate: root.validate_number(self)
                # 19
                MDTextField:
                    id: var_k
                    hint_text: "Ingrese los valores de la constante del resorte K: "
                    mode: "rectangle"
                    required: True
                    helper_text: "Este campo es requerido"
                    on_text_validate: root.validate_number(self)
                # 20
                MDTextField:
                    id: var_m
                    hint_text: "Ingrese los valores de la masa m: "
                    mode: "rectangle"
                    required: True
                    helper_text: "Este campo es requerido"
                    on_text_validate: root.validate_number(self)
                # 21
                MDTextField:
                    id: var_f
                    hint_text: "Ingrese los valores de la Fuerza externa aplicada F: "
                    mode: "rectangle"
                    required: True
                    helper_text: "Este campo es requerido"
                    on_text_validate: root.validate_number(self)
                # 22
                MDRaisedButton:
                    text: "Generar Grafico"
                    font_style: "Subtitle2"
                    pos_hint: {'center_x':0.5}
                    size_hint_x: .5
                    on_release:
                        root.ejercicio_demostrativo_masa(var_c_1, var_k, var_m, var_f)
                # 23
