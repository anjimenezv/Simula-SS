                        app.navigation('exsenales','next')
                MDLabel:
                    markup: True
                    halign: 'center'
                    text: '[b][color=506E84]Funciones Singulares[/color][/ref][/b]'
                    font_name:'Arial'
                    font_size: dp(18)
                MDLabel:
                    text: 'Las funciones singulares son aquellas que tienen una representación matemática simple, la cual permite manipular  desde el punto de vista del calculo. Acá hablaremos acerca de la función impulso unitario y escalón unitario.'
                    text_size: self.width, None
                    halign: "left"
                    size_hint_y: None
                    font_name:'Arial'
                    font_size: dp(14)
                    height: self.texture_size[1] 
