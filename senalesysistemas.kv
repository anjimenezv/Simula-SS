                    font_name:'Arial'
                    font_size: dp(14)
                    height: self.texture_size[1] 
                Image:
                    source: 'imagenes/escuni.png'
                    allow_stretch: True
                    keep_ratio: True
                    size_hint_y: None
                    height: dp(180)
                MDLabel:
                    text: 'Al desplazar la función de escalón unitario en u(t-t0), se puede definir como en t=0 y su valor es indefinido, quedando de la siguiente manera: '
                    text_size: self.width, None
                    halign: "left"
                    size_hint_y: None
                    font_name:'Arial'
                    font_size: dp(14)
                    height: self.texture_size[1]  
                Image:
                    source: 'imagenes/dezescuni.png'
